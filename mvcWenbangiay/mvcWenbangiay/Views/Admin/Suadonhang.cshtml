@model mvcWenbangiay.Models.DONDATHANG

@{
    ViewBag.Title = "Suadonhang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">SỬA ĐƠN HÀNG</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaDonHang)

        <div class="form-group">
            <label class="control-label col-md-2" >Trạng thái </label>
            
            <div class="col-md-10">
                @Html.DropDownList("Trangthai")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Phương thức thanh toán</label>
            <div class="col-md-10">
                <div class="form-control text-box single-line"> @Html.DisplayFor(model => model.Phuongthuc.PhuongThucThanhToan)</div>

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày đặt</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ngaydat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ngaydat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày giao </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ngaygiao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ngaygiao, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("QUAY LẠI", "Donhang")
</div>

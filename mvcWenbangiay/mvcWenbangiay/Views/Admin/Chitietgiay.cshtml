@model mvcWenbangiay.Models.GIAY

@{
    ViewBag.Title = "Chitietgiay";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÔNG TIN CHI TIẾT GIÀY</h2>

<div style="margin-left:35px">
   
    <hr />
    <table class="table">
        <tr>
            <th>Tên giày</th>
            <th> Giá bán</th>
            <th>Mô tả</th>
            <th>Ảnh chính</th>
            <th>Ảnh phụ 1</th>
            <th>Ảnh phụ 2</th>
            <th>Ngày cập nhật</th>
            <th>Số lượng tồn</th>
            <th>Loại giày</th>
            <th>Hãng giày</th>
            <th>Size</th>
        </tr>
        <tr>
            <td> @Html.DisplayFor(model => model.Tengiay)</td>
            <td>@String.Format("{0:0,0}", Model.Giaban) VNĐ</td>
            <td>@Html.DisplayFor(model => model.Mota)</td>
            <td><img src="@Url.Content("~/Hinhsanpham/" + Model.Anhbia)" style="width: 130px" /></td>
            <td><img src="@Url.Content("~/Hinhsanpham/"+ Model.Anhbia1)" style="width:130px" /></td>
            <td> <img src="@Url.Content("~/Hinhsanpham/"+ Model.Anhbia2)" style="width: 130px" /></td>
            <td>@String.Format("{0:dd/MM/yyyy}", Model.Ngaycapnhat)</td>
            <td> @Html.DisplayFor(model => model.Soluongton)</td>
            <td> @Html.DisplayFor(model => model.LOAIGIAY.TenLoaiGiay)</td>
            <td> @Html.DisplayFor(model => model.HANGGIAY.TenHG)</td>
            <td>@Html.DisplayFor(model => model.Size)</td>
        </tr>

    </table>
</div>
<p style="margin-left:35px">
    @Html.ActionLink("SỬA", "Suagiay", new { id = Model.Magiay }) |
    @Html.ActionLink("XÓA", "Xoagiay", new { id = Model.Magiay }) |
    @Html.ActionLink("QUAY LẠI", "Giay")
</p>

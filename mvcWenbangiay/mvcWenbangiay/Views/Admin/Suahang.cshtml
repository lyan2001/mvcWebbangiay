@model mvcWenbangiay.Models.HANGGIAY

@{
    ViewBag.Title = "Suahang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">SỬA THÔNG TIN HÃNG GIÀY</h2>

@using (Html.BeginForm("Suahang", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaHG)

        <div class="form-group">
            <div style="margin-left:10px">
                Tên hãng giày
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenHG, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenHG, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU" class="btn btn-danger" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("QUAY LẠI", "Hanggiay")
</div>
